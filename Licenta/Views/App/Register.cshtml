            <option value="Banci si politici monetare">Banking and Monetary Policies</option>
            <option value="Cercetari avansate in finante">Advanced research in finance</option>
            <option value="Finante aplicate">Master of Applied Finance</option>
            <option value="Finante corporative">Corporate Finance</option>
            <option value="Finante si banci - DOFIN">Finance and Banking - DOFIN</option>
            <option value="Fiscalitate">Taxation</option>
            <option value="Management financiar si investitii">Financial management and investment</option>
            <option value="Managementul riscului si asigurari">Risc management and insurance</option>
            <option value="Managementul sistemelor bancare">Banking systems management</option>
            <option value="Tehnici actuariale">Actuarial techniques</option>

            @*Licenta Man*@
            <option value="Management">Management</option>
            @*Master*@
            <option value="Consultanta in management si dezvoltarea afacerilor">Management consulting and business development</option>
            <option value="Management">Management</option>
            <option value="Management si marketing international">Management and international marketing</option>
            <option value="Managementul afacerilor">Business management</option>

@model Student
@{
    ViewBag.Title = "Register";
}
@section Scripts{
<script src="~/node_modules/jquery-validation/jquery.validate.min.js"></script>
<script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<form method="post" id="register" action="Register">
    <h1>@ViewBag.Title</h1>
    <p>Please fill in this form to create an account.</p>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="FirstName"><b>First name</b></label>
        <input asp-for="FirstName" placeholder="Enter first name">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="LastName"><b>Last name</b></label>
        <input asp-for="LastName" placeholder="Enter last name">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Email"><b>Email</b></label>
        <input asp-for="Email" placeholder="Enter Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Initial"><b>Father's initial</b></label>
        <input asp-for="Initial" placeholder="Enter father's initial">
        <span asp-validation-for="Initial" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="StudyProgram"><b>Study program</b></label>
        <select asp-for="StudyProgram" id="study_program">
            <option value="License">License</option>
            <option value="Master">Master</option>
        </select>
        <span asp-validation-for="StudyProgram" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Year"><b>Year of study</b></label>
        <select asp-for="Year" id="year">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="LanguageOfStudy"><b>Language of study</b></label>
        <select asp-for="LanguageOfStudy" id="lang">
            <option value="ro">Romanian</option>
            <option value="en">English</option>
            <option value="fr">French</option>
            <option value="gr">German</option>
        </select>
        <span asp-validation-for="LanguageOfStudy" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Faculty"><b>Faculty</b></label>
        <select asp-for="Faculty" id="faculty">
            <option value="FABIZ">Faculty of Business Administration in foreign languages</option>@*Specializarile sunt de fapt limbile (fr, en , germana)*@
            <option value="FAMP">Faculty of Administration and Public Management</option>
            <option value="BBS">Bucharest Business School</option>@*Doar master*@
            <option value="BT">Faculty of Business and Tourism</option>
            <option value="CSIE">Facultaty of Cybernetics, Statistics and Economic Informatics</option>
            <option value="CIG">Faculty of Accounting and Management Information Systems</option>
            <option value="ETA">Faculty of Economics, Theoretical and Applied</option>
            <option value="EAM">Faculty of Agrifood and Environmental Economics</option>
            <option value="FABBV">Faculty of Finance and Banking</option>
            <option value="Management">Faculty of Management</option>
            <option value="Marketing">Faculty of Marketing</option>
            <option value="REI">Faculty of International Business and Economics</option>
        </select>
        <span asp-validation-for="Faculty" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Specialization"><b>Specialization</b></label>
        <select asp-for="Specialization" id="specialization">
            @*Master FABIZ*@
            <option value="Antreprenoriat si administrarea afacerilor in domeniul energiei">Entrepreneurship and Business Administration in Energy</option>
            <option value="Administrarea Afacerilor">Business Administration</option>
            <option value="Antreprenoriat si Administrarea Afacerilor">Entrepreneurship and Business Administration</option>
            <option value="Cercetare in afaceri">Business Research</option>
            <option value="MBA romano-german" Management antreprenorial">Management and Entrepreneurship MBA</option>

            @*Licenta FAMP*@
            <option value="Administratie publica">Public administration</option>
            <option value="Resurse umane">Human resources</option>
            @*Master*@
            <option value="Administratie publica si integrare europeana">Public administration and european integration</option>
            <option value="Administratie si management public">Administration and public management</option>
            <option value="Managementul resurselor umane in sectorul public">Human resources management in public sector</option>

            @*Master BBS*@
            <option value="MBA Romano-Francez INDE IFR">Romanian-French INDE MBA</option>
            <option value="Dezvoltarea economica a intreprinderii">Economic development of the company</option>
            <option value="MBA Romano-Canadian">MBA Romanian-Canadian</option>
            <option value="MBA Romano-Francez INDE">Romanian-French INDE MBA</option>
            <option value="MBA romano-german <<Management antreprenorial>>">Management and Entrepreneurship MBA</option>

            @*Licenta BT*@

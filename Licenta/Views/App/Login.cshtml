@model User

@{
    ViewBag.Title = "Log In";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <form method="get" asp-action="LoginGet" asp-controller="App">
            <input type="email" asp-for="Email" class="fadeIn first" autocomplete="off"  placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>

            <input type="password" asp-for="Password" class="fadeIn second" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="fadeIn third">Log In</button>
        </form>
        <div id="formFooter">
            <a class="underlineHover" asp-controller="Account" asp-action="Register">Don't have an account?</a>
            <br><br />
            <a class="underlineHover" asp-controller="App" asp-action="ResetPassword">Forgot password?</a>
        </div>
    </div>
</div>

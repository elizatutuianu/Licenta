@model User
@{
    ViewBag.Title = "Change Password";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <form method="post" asp-action="ChangePassword" asp-controller="App">
            @*<input type="email" asp-for="Email" class="fadeIn first" autocomplete="off" name="login" value="@ViewBag.Email" readonly>*@
            <input type="password" asp-for="@Model.Password" class="fadeIn second" placeholder="New password">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

            <input type="password" asp-for="@Model.ConfirmPassword" class="fadeIn third" placeholder="Confirm new password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="fadeIn fourth">Change</button>
            <p>@ViewBag.Message</p>
        </form>
    </div>
</div>


